<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/buildingImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/building_name_placeholder"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView1"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView1"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/building_name_placeholder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:layout_alignTop="@+id/buildingImage"
        android:layout_toEndOf="@+id/buildingImage"
        android:textStyle="normal|bold" />

</RelativeLayout>